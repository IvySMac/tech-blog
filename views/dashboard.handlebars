<div class="row">
  <div class="col-auto">
    <h2 class="welcome">Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-15">
    <h3>Create a New post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <input class="form-input" type="text" id="post-name" name="post-name" placeholder="Title" />
      </div>
      <div class="form-group">
        <textarea class="form-input" id="post-desc" name="post-desc" placeholder="What do you have on your mind?"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
</div>

  {{#if posts.length}}
  <div class="post-list">
    <h3>Previous Posts:</h3>

    {{#each posts as |post|}}
    <div class="col mb-2">
      <div class="col-md-9">
        <h4><a href="/post/{{post.id}}">{{post.name}}</a></h4>
      </div>
      <div class="col-md-2">
        <button class="btn btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}

<script src="./js/dashboard.js"></script>
